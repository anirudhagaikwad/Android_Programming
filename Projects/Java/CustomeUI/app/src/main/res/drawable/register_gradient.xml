<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="45"
                android:startColor="#F4401A"
                android:endColor="#F7D1C9"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFFFF"/>
            <corners
                android:bottomRightRadius="300dp"
                android:topLeftRadius="160dp"/>
        </shape>
    </item>

</layer-list>




<!--Item 1: Gradient Rectangle-->
<!--<shape android:shape="rectangle">: Specifies that the shape is a rectangle.-->
